# Production environment example - copy to .env.production and fill values

# === DATABASE CONFIGURATION ===
# MongoDB Configuration
MONGODB_URL=mongodb://your-production-mongodb:27017
MONGODB_DATABASE=second_brain_prod

# Redis Configuration (local fallback is attempted first)
REDIS_HOST=redis-11991.c13.us-east-1-3.ec2.redns.redis-cloud.com
REDIS_PORT=11991
REDIS_DB=0
# If you use a managed Redis, prefer setting the storage URI including credentials
# Format: redis://:PASSWORD@HOST:PORT/DB
REDIS_STORAGE_URI=redis://:REPLACE_WITH_PASSWORD@redis-11991.c13.us-east-1-3.ec2.redns.redis-cloud.com:11991/0
# Optional username (some providers require username)
REDIS_USERNAME=default
# REDIS_PASSWORD is also supported if your config loader uses it
REDIS_PASSWORD=REPLACE_WITH_REAL_PASSWORD

# === SECURITY CONFIGURATION ===
# Core Security Keys (REQUIRED - generate secure values)
SECRET_KEY=REPLACE_WITH_SECURE_SECRET_KEY
FERNET_KEY=REPLACE_WITH_SECURE_FERNET_KEY

# === MCP SERVER CONFIGURATION ===
# Core MCP Settings
MCP_ENABLED=true
MCP_SERVER_NAME=SecondBrainMCP
MCP_SERVER_VERSION=1.0.0
MCP_DEBUG_MODE=false

# MCP Transport Configuration (FastMCP 2.x)
MCP_TRANSPORT=http
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=8001
MCP_HTTP_CORS_ENABLED=true
MCP_HTTP_CORS_ORIGINS=https://your-frontend.com,https://api.your-domain.com

# MCP Security Settings (PRODUCTION)
MCP_SECURITY_ENABLED=true
MCP_REQUIRE_AUTH=true
MCP_AUTH_TOKEN=REPLACE_WITH_SECURE_MCP_TOKEN
MCP_AUDIT_ENABLED=true

# MCP Rate Limiting Configuration
MCP_RATE_LIMIT_ENABLED=true
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_PERIOD=60
MCP_RATE_LIMIT_BURST=10

# MCP Performance Settings
MCP_MAX_CONCURRENT_TOOLS=50
MCP_REQUEST_TIMEOUT=30
MCP_TOOL_EXECUTION_TIMEOUT=60

# MCP Tool Configuration
MCP_TOOLS_ENABLED=true
MCP_RESOURCES_ENABLED=true
MCP_PROMPTS_ENABLED=true

# MCP Tool Access Control (PRODUCTION - Restricted)
MCP_FAMILY_TOOLS_ENABLED=true
MCP_AUTH_TOOLS_ENABLED=true
MCP_PROFILE_TOOLS_ENABLED=true
MCP_SHOP_TOOLS_ENABLED=true
MCP_WORKSPACE_TOOLS_ENABLED=true
MCP_ADMIN_TOOLS_ENABLED=false
MCP_SYSTEM_TOOLS_ENABLED=false

# MCP Monitoring Settings
MCP_MONITORING_ENABLED=true
MCP_HEALTH_CHECK_ENABLED=true
MCP_METRICS_ENABLED=true
MCP_PERFORMANCE_MONITORING=true

# MCP Error Handling Configuration
MCP_ERROR_RECOVERY_ENABLED=true
MCP_CIRCUIT_BREAKER_ENABLED=true
MCP_RETRY_ENABLED=true
MCP_RETRY_MAX_ATTEMPTS=3
MCP_RETRY_BACKOFF_FACTOR=2.0

# MCP Cache Configuration
MCP_CACHE_ENABLED=true
MCP_CACHE_TTL=300
MCP_CONTEXT_CACHE_TTL=60

# === AI INTEGRATION SETTINGS ===
AI_ENABLED=true

# === OPTIONAL SECURITY FEATURES ===
# Cloudflare Turnstile for additional security
TURNSTILE_SITEKEY=your-turnstile-site-key
TURNSTILE_SECRET=your-turnstile-secret-key
