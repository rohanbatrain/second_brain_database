# Prefer local flake for speed and iteration.
CANDIDATES=(
  "$HOME/Documents/nix-config#typescript"
  "github:rohanbatrain/nix-config/a9cfc73bb234f92fe4f669b51d1c45f400cc43e6#typescript"
  "github:rohanbatrain/nix-config#typescript"
)

for c in "${CANDIDATES[@]}"; do
  # try to use the flake; if it succeeds, stop
  if use flake "$c" 2>/dev/null; then
    echo "direnv: using flake $c"
    exit 0
  fi
done

# If we reached here, nothing worked; print a helpful message
echo "direnv: warning â€” no usable devShell found among candidates"
