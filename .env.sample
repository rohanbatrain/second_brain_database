# .env file - This file should NOT be committed to version control (e.g., Git)

# MongoDB Configuration
MONGO_URL=mongodb://mongo:27017           # Assuming 'mongo' is the service name of your MongoDB container
MONGO_DB_NAME=your_application_db_name    # Replace with a meaningful name for your database

# Application Secret Key
SECRET_KEY=your_super_long_and_random_secret_key_here_at_least_32_characters_or_more_for_security # Generate a strong, random key!

# JWT Configuration
JWT_EXPIRY=15m                            # Access token expiry (e.g., 15 minutes)
JWT_REFRESH_EXPIRY=7d                     # Refresh token expiry (e.g., 7 days)

# Third-Party API Key (if MT_API stands for something like "Money Transfer API" or "Messaging API")
MT_API=your_third_party_api_key_here      # Replace with the actual API key from your provider

# Redis Configuration (assuming Redis Docker container)
REDIS_HOST=redis                          # Assuming 'redis' is the service name of your Redis container
REDIS_PORT=6379                           # Default Redis port
REDIS_DB=0                                # Redis database number (0 is default, or choose another if needed)
# REDIS_STORAGE_URI is typically constructed by your code from the above, but you can explicitly set it if a library requires it
# If your code expects it, then you might also set:
REDIS_STORAGE_URI=redis://redis:6379/0  # This would typically be derived from REDIS_HOST/PORT/DB