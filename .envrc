# Prefer local flake for speed and iteration.
CANDIDATES=(
  "$HOME/Documents/nix-config#python"
  "github:rohanbatrain/nix-config/a9cfc73bb234f92fe4f669b51d1c45f400cc43e6#python"
  "github:rohanbatrain/nix-config#python"
)

for c in "${CANDIDATES[@]}"; do
  # try to use the flake; call it directly so any shellHook or welcome
  # messages are printed to the terminal (don't capture or redirect)
  if use flake "$c"; then
    return 0
  fi
done

# If we reached here, nothing worked; print a helpful message to stderr
echo "direnv: warning â€” no usable devShell found among candidates" >&2
return 1
